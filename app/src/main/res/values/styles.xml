<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.JasperDark">
        <item name="android:windowBackground">@drawable/ic_resources_background</item>
        <item name="listLayoutStyle">@style/list.item.layout</item>
        <item name="gridLayoutStyle">@style/grid.item.layout</item>
        <item name="multiChoiceAdapterStyle">@style/MultiChoiceAdapter</item>
    </style>

    <style name="MultiChoiceAdapter">
        <item name="itemClickInActionMode">selectItem</item>
    </style>

    <style name="list"/>

    <style name="list.item"/>

    <style name="list.item.layout">
        <item name="android:background">@drawable/custom_list_item_bg</item>
    </style>

    <style name="list.item.title">
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list.item.subTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:singleLine">true</item>
    </style>

   <style name="list.item.metadata">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="grid"/>

    <style name="grid.item"/>

    <style name="grid.layout">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="grid.item.layout">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/ab_stacked_solid_box</item>
    </style>

    <style name="grid.item.context">
        <item name="android:padding">8dp</item>
    </style>

    <style name="grid.item.title">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="grid.item.subTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:maxLines">2</item>
    </style>


</resources>
