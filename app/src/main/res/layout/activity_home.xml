<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/showRepositories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repositories" />

    <Button
        android:id="@+id/showLibraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Libraries" />

    <Button
        android:id="@+id/showSavedItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Items" />

    <Button
        android:id="@+id/showFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorites" />

    <Button
        android:id="@+id/showServers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Profiles" />
</LinearLayout>
